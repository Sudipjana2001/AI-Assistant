# Project Configuration
PROJECT_NAME=Market Research Assistant
DEBUG=True
API_V1_PREFIX=/api/v1

# Azure AI Foundry Project
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=rg-market-research
AZURE_AI_PROJECT_NAME=market-research-assistant

# Azure OpenAI (via AI Foundry)
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure AI Search (RAG Vector Store)
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your-search-admin-key
AZURE_SEARCH_INDEX_NAME=market-research-index

# Azure Blob Storage (File Uploads)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER=uploads

# Azure Document Intelligence (Unstructured Data Processing)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intel.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-doc-intel-key

# Database (Choose one)
# Option 1: Azure SQL
DATABASE_URL=mssql+pyodbc://user:password@server.database.windows.net:1433/dbname?driver=ODBC+Driver+18+for+SQL+Server

# Option 2: SQLite (for local development)
# DATABASE_URL=sqlite+aiosqlite:///./market_research.db

# Azure Cosmos DB Gremlin (for KAG Knowledge Graph)
COSMOS_GREMLIN_ENDPOINT=your-cosmos.gremlin.cosmos.azure.com
COSMOS_GREMLIN_PORT=443
COSMOS_GREMLIN_KEY=your-gremlin-key
COSMOS_GREMLIN_DATABASE=KnowledgeGraph
COSMOS_GREMLIN_GRAPH=MarketResearch

# Azure Databricks (Compute & Notebooks)
DATABRICKS_WORKSPACE_URL=https://adb-xxxx.x.azuredatabricks.net
DATABRICKS_TOKEN=dapi-xxxxxxxxxxxxx
DATABRICKS_CLUSTER_ID=xxxx-xxxxxx-xxxxxxxx

# CORS Origins (frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
